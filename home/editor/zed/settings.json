// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": false,
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.0-flash-thinking-exp"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Mirage"
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#0d1016F7",
    "title_bar.background": "#0d1016F7",
    "status_bar.background": "#0d1016F7",
    "tab.active_background": "#00000077",
    "toolbar.background": "#00000077",
    "terminal.background": "#00000000",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000003",
    "tab.inactive_background": "#00000000",
    "tab_bar.background": "#00000005",
    "panel.background": "#00000000"
  },
  "vim_mode": true,
  "languages": {
    "YAML": {
      "format_on_save": "off"
    },
    "SCSS": {
      "format_on_save": "off"
    },
    "Nix": {
      "language_servers": ["nixd", "!nil"],
      "formatter": {
        "external": {
          "command": "alejandra", // or "nixfmt"
          "arguments": ["--quiet", "--"]
        }
      }
    }
  },
  "autosave": "on_focus_change",
  "file_scan_exclusions": [
    "**/.git",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.yarn/releases"
  ],
  "lsp": {
    "nixd": {
      "initialization_options": {
        "nixos": {
          // untested
          "expr": "(builtins.getFlake \"/Users/gcornut/git/nix\").darwinConfigurations.218300486L.options"
        }
      }
    }
  }
}
